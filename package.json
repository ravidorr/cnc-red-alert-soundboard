{
  "name": "cnc-red-alert-soundboard",
  "version": "3.0.1",
  "description": "Command & Conquer Red Alert Soundboard PWA",
  "type": "module",
  "main": "js/main.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:coverage:check": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --coverageThreshold='{\"global\":{\"statements\":90,\"branches\":85,\"functions\":90,\"lines\":90}}'",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint js/**/*.js tests/**/*.js",
    "lint:css": "stylelint css/**/*.css",
    "lint:html": "htmlhint index.html",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "precommit": "npm run lint && npm run test:coverage:check",
    "prepare": "husky",
    "version": "node scripts/sync-version.js && git add js/version.js sitemap.xml index.html",
    "build:css": "node scripts/build-css.js"
  },
  "keywords": [
    "command-and-conquer",
    "red-alert",
    "soundboard",
    "pwa"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "htmlhint": "^1.1.4",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0"
  }
}
